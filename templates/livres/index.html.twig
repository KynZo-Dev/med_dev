{% extends "base.html.twig" %}

{% block title %}Médiatheque Click&collect Catalogue{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('/css/stylecatalogue.css') }}">
{% endblock %}

{% block body %}
    <header class="header">
        <h1 class="h1">Médiathèque Chapelle-Curreaux</h1>
    </header>
    <!-- Bar de menu -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
                <a class="navbar-brand" href="#"></a>
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="{{ path('livres_index') }}">Catalogue</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Emprunts</a>
                    </li>
                    {% if is_granted('ROLE_EMPLOYE') %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('livres_new') }}">Ajouté un livre</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="administration.html">Administration</a>
                        </li>
                    {% else %}
                    {% endif %}
                </ul>
                <span class="navbar-text">
                    <form class="d-flex" method="post">
                        <input class="form-control me-2" type="text" placeholder="recherche" onkeyup="rechercher()" name="rech" id="rech">
                        <div id="resultat"></div>
                        {# <button class="btn btn-outline-success" type="submit">Recherché</button> #}
                    </form>
                </span>
            </div>
        </div>
    </nav>
    <main>
    {% for livre in livres %}
        <h2 class="col-12">Catalogues de {{ livres|length }} Livres{#{ pluralize(books|length,'Livre', 'Livres') }#}</h2>
        <table class="table table-striped table-hover table-responsive">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Titre</th>
                    <th scope="col">Description</th>
                    <th scope="col">Auteur</th>
                    <th scope="col">Genre</th>
                    <th scope="col">Parution</th>
                    <th scope="col">ImgCouverture</th>
                    <th scope="col">Disponible</th>
                    <th scope="col">actions</th>
                    <th scope="col">Reserver</th>
                </tr>
            </thead>
            <tbody  class="table-striped">
            
                <tr>
                    <td>{{ livre.Titre }}</td>
                    <td>{{ livre.Description }}</td>
                    <td>{{ livre.Auteur }}</td>
                    <td>{{ livre.Genre }}</td>
                    <td>{{ livre.Parution ? livre.Parution|date('Y-m-d') : '' }}</td>
                    <td>{{ livre.ImgCouverture }}</td>
                    <td>{{ livre.Disponible ? 'Yes' : 'No' }}</td>
                    <td>
                        {% if is_granted('ROLE_EMPLOYE') %}
                        <a href="{{ path('livres_edit', {'id': livre.id}) }}">edit</a>
                        {% else %}
                        {% endif %}
                        <a href="{{ path('livres_show', {'id': livre.id}) }}">show</a>
                    </td>
                    <td>
                        {% if livre.disponible > 0 %}
                            <button class="btn btn-outline-success" type="button" href="{{ path('reservations_index') }}">disponible</button>
                        {% else %}
                            <button class="btn btn-outline-danger" disabled>non disponible</button>
                        {% endif %}
                    </td>
                </tr>
            </tbody>
        </table>
    {% else %}
        <tr>
            <td colspan="9">no records found</td>
        </tr>
    {% endfor %}
    </main>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('/js/style.js') }}"></script>
{% endblock %}
