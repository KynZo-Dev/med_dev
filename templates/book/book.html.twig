{% extends "base.html.twig" %}

{% block title %}Médiatheque Click&collect Catalogue{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('/css/style.css') }}">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
{% endblock %}

{% block javascripts %}
    <!-- jQuery CDN -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <!-- Our JavaScript -->
    <script src="script.js"></script>
{% endblock %}
{% block body %}
    <header class="header">
        <h1 class="h1">Médiathèque Chapelle-Curreaux</h1>
    </header>
    <!-- Bar de menu -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
                <a class="navbar-brand" href="#"></a>
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="{{ path('app_catalogues') }}">Catalogue</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="emprunt.html">Emprunts</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_create') }}">Ajouté un livre</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="administration.html">Administration</a>
                    </li>
                </ul>
                <span class="navbar-text">
                    <form class="d-flex" action="recherche.php" method="post">
                        <input class="form-control me-2" type="search" placeholder="recherche" aria-label="Search" name="search">
                        <button class="btn btn-outline-success" type="submit">Recherché</button>
                    </form>
                </span>
            </div>
        </div>
    </nav>
    <main>
        <div class="row">
            <!-- Titre des cartes -->
            <h2 class="col-12">Catalogues de {{ pluralize(books|length,'Livre', 'Livres') }}</h2>
            {% for book in books %}
            <div class="col-4">
            <!-- 1er cartes -->
                <div class="card">
                    <!-- Image de la 1er carte -->
                    <a href="#"><img src="{{ book.picture }}" alt="IMG"></a>
                    <!-- corp de la 1er carte -->
                    <div class="card-body">
                    <!-- Titre de la 1er carte -->
                    <div class="card-title">
                        <h3><a href="{{ path('app_show', {'id': book.id})}}">{{ book.title }}</a></h3>
                        <!-- Barre de progrès de la 1er carte -->
                        <!-- Text de la 1er carte -->
                        <p class="card-text">
                            {{ book.description }}<br>
                            {{ book.author }}<br>
                            {{ book.kind }}<br>
                            {{ book.releasedate|date('d-m-Y') }}<br>
                            {{ book.available }}<br>
                        </p>
                    </div>
                </div>
            </div>
        </div>
        {% else %}
          <p>délosé, Pas de livres !</p>
        {% endfor %}
      </div>
    </main>
{% endblock %}